<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/iiitdlogo" />

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:gravity="center"
            android:text="@string/register"
            android:textSize="20dp"
            android:textColor="@color/iiitdGreen"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@+id/register"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/iiitdBlack"
                android:textSize="15dp"
                android:text="Name"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:textSize="15dp"
                android:hint="Enter your name"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/tvRollnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Roll Number"
                    android:textColor="@color/iiitdBlack"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/rollNumber"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRollnumber"
                    android:hint="@string/rollnumber"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:maxLines="1" />

                <TextView
                    android:id="@+id/tvBranch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/branch"
                    android:text="Branch"
                    android:textColor="@color/iiitdBlack"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/branch"
                    android:layout_width="197dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tvRollnumber"
                    android:hint="@string/branch"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:maxLines="1" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Courses"
                    android:textColor="@color/iiitdBlack"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/course1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/course_name"
                    android:paddingBottom="10dp"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:maxLines="1"/>
                <EditText
                    android:id="@+id/course2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/course_name"
                    android:paddingBottom="10dp"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:maxLines="1"/>
                <EditText
                    android:id="@+id/course3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/course_name"
                    android:paddingBottom="10dp"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:maxLines="1"/>
                <EditText
                    android:id="@+id/course4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/course_name"
                    android:paddingBottom="10dp"
                    android:textSize="15dp"
                    android:inputType="text"
                    android:maxLines="1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_below="@+id/ll1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/submit"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginRight="55dp"
                android:background="@color/iiitdGreen"
                android:text="@string/button1"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:onClick="DisplayStudentDetails"/>

            <Button
                android:id="@+id/clear"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@color/red"
                android:text="@string/button2"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:onClick="ClearAllFields"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>